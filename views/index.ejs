<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.1/css/all.css" integrity="sha384-vp86vTRFVJgpjF9jiIGPEEqYqlDwgyBgEF109VFjmqGmIY/Y4HV4d3Gp2irVfcrp" crossorigin="anonymous">
    <link rel="stylesheet" href="./css/todolist.css">
    <title>note</title>
  </head>
  <body>
    <section id="header">
      <div class="navbar">
        <ul>
          <li><i class="fas fa-home fa-2x"></i></li>
        </ul>
      </div>
    </section>
    <section id="content">
      <div class="create-search">
        <form id="create_form" action="/category" method="post">
          <input type="text" name="createCategory" placeholder="Create a category" autocomplete="off" required>
          <button type="submit">Enter</button>
        </form>
      </div>
      <div class="category-list">
        <form id="list_category_form" action="/add" method="post">
            <label for="category">Choose category:</label>
            <% if(allLists !== null){ %>
              <select name="categoryList" id="cars">
                <% allLists.map((category)=> { %>
                  <option  value="<%=category%>"><%=category%></option>
                <% }) %>
              </select>
            <% } %>
            
            <button type="submit">Enter</button>
        </form>
      </div>
      <div class="content">
        <div class="title">
          <p><%=category%></p>
        </div>

        <% if(items !== null){ %>

            <% items.map((item)=> { %>
                <div class="item">
                    <form id="<%=item._id%>" class="checkbox-form" method="post" action="/delete">
                        <input class="checkbox" type="checkbox" name="check" id="<%=item._id%>" value="<%=item._id%>" />
                        <p><%=item.item_name%></p>
                        <input type="hidden" name="categoryName" value="<%=category%>" />
                    </form>    
                </div>
           <% }) %>

        <% } %>

        
          
       
        
        <div class="form">
          <form class="form-item" action="/" method="post">
              <input type="text" name="inputName" placeholder="New Item" autocomplete="off" required>
              <button type="submit" value="<%=category%>" name="button"><i style="color:#845ec2" class="fas fa-plus-circle fa-3x"></i></button>
          </form>
        </div>
      </div>
    </section>
    <section id="footer">
      <div class="footer">
        <p>Enamul Hoque</p>
        <p>Email: enamulhoquegsu@gmail.com</p>
        <p>Phone: 323-394-2078</p>
      </div>
    </section>

  </body>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
  <script src="./js/note.js"></script> 
</html>
